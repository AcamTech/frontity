{
  "name": "frontity-monorepo",
  "private": true,
  "scripts": {
    "test": "cross-env NODE_ENV=test npm run test:ci && npm run e2e:ci",
    "test:ci": "jest --clearCache && lerna run test:ci --stream",
    "e2e": "start-server-and-test cy:dev http://localhost:3001 cy:open",
    "e2e:ci": "start-server-and-test cy:prod http://localhost:3001 cy:run",
    "prepare": "lerna bootstrap --hoist",
    "release": "lerna publish --yes",
    "reinstall": "lerna clean --yes && npm run prepare",
    "cy:open": "cypress open --env HEADLESS=false",
    "cy:prod": "cd e2e/project/ && npx frontity build && npx frontity serve --port 3001",
    "cy:dev": "cd e2e/project/ && npx frontity dev --port 3001 --dont-open-browser",
    "cy:run": "cypress run --env HEADLESS=true"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "cross-env": "^5.2.1",
    "cypress": "^3.4.1",
    "eslint": "^6.2.2",
    "eslint-plugin-cypress": "^2.6.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^1.3.1",
    "lerna": "^3.15.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "start-server-and-test": "^1.10.2",
    "typescript": "^3.6.3"
  },
  "prettier": {}
}
